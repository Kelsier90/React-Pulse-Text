{
  "name": "@kelsier90/react-pulse-text",
  "Author": "Rubén Albarracín",
  "private": false,
  "version": "2.0.1",
  "type": "module",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "default": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Kelsier90/React-Pulse-Text"
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc -b ./tsconfig.lib.json && vite build --config vite.lib.config.ts",
    "build:docs": "tsc -b ./tsconfig.docs.json && vite build --config vite.docs.config.ts",
    "lint": "eslint react-pulse-text",
    "preview": "vite preview --config vite.docs.config.ts",
    "prepare": "husky",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build:lib",
    "predeploy": "npm run build:docs",
    "deploy": "gh-pages -d dist-docs"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "gh-pages": "^6.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "wouter": "^3.6.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
